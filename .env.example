# Copy to `.env.local` (dev) or configure in your hosting environment (prod).
# Do NOT commit real secrets.

# --- Core (required) ---
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# --- App URLs (recommended; required for OAuth redirects) ---
# Example: https://aliado.pro (prod) or http://localhost:3000 (dev)
NEXT_PUBLIC_APP_URL=
NEXT_PUBLIC_SITE_URL=

# --- Admin (recommended) ---
# Comma-separated emails with admin access
ADMIN_EMAILS=

# --- Billing toggle ---
NEXT_PUBLIC_BILLING_ENABLED=false

# --- Wompi (required when billing enabled) ---
# WOMPI_ENVIRONMENT=sandbox|production
WOMPI_ENVIRONMENT=sandbox
NEXT_PUBLIC_WOMPI_PUBLIC_KEY=
WOMPI_PRIVATE_KEY=
WOMPI_INTEGRITY_SECRET=
WOMPI_WEBHOOK_SECRET=
# Protect cron endpoints `/api/cron/*`
WOMPI_CRON_SECRET=
# Optional override (defaults to sandbox URL if unset)
NEXT_PUBLIC_WOMPI_BASE_URL=https://sandbox.wompi.co
# Temporary escape hatch (should be false in production)
WOMPI_SKIP_SIGNATURE_VALIDATION=false

# --- Docling (recommended; required for process ingestion) ---
# Example: http://localhost:8001 (Docling Serve)
DOCLING_BASE_URL=

# --- Email (optional; used by /api/send-email and billing notifications) ---
RESEND_API_KEY=

# --- AI / search providers (optional; some flows can use profile-stored keys) ---
OPENAI_API_KEY=
OPENROUTER_API_KEY=
SERPER_API_KEY=
FIRECRAWL_API_KEY=

# --- Local LLM (optional; used when provider=local) ---
NEXT_PUBLIC_OLLAMA_URL=

# --- Misc ---
DISABLE_PWA=false
NEXT_TELEMETRY_DISABLED=1

